{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "webpack",
			"problemMatcher": [],
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"type": "npm",
			"script": "webpack-dev",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch-all",
			"dependsOn": [
				"npm: webpack-dev",
				"npm: watch"
			],
			"dependsOrder": "parallel"
		}
	]
}
